package com.mycompany.watermelonproblem;

import java.util.Scanner;

public class WatermelonProblem {

    public static void main(String[] args) {
      Scanner  sc = new Scanner(System.in);
           int w=sc.nextInt();
           if(w%2==0 && w>2){
               System.out.print("Yes");
           }
           else{
               System.out.print("No");  
           }
    }
}

